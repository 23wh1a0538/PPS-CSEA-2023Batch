//to print number of days in a month using switch
#include <stdio.h>
int main() {
    int month;
    printf("enter any month(in numbers)\n");
    scanf("%d",&month);
    switch(month){
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
              printf("total number of days=31");
              break;
        case 4:
        case 6:
        case 9:
        case 11:
               printf("total number of days =30");
               break;
        case 2:
              printf("total number of days=28");
              break;
        default:
              printf("month doesnot exist");
    }
    return 0;
}
    
