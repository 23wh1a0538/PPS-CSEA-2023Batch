#include<stdio.h>
int main(){
    int month;
    printf("input month number: ");
    scanf("%d",&month);
    switch(month) {
           case 1: case 3: case 5: case 7: case 8: case 10: case 12:
      printf("total number of days=31\n,month);
      break;
      case 4: case 6: case 9: case 11:
      printf("total number of days =30\n,month);
      break;
      case 2:
              printf("total number of days=28\n or 29\n,month);
      break;
     default:
         printf("invalid month number\n);
     }
         return 0;
         }
          
          
